{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": ".",
		"module": "ES2022",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"composite": true,
		"types": [
			"vite/client",
			"vitest/globals"
		],
		"paths": {
			"~modules/*": [
				"src/modules/*"
			],
			"~router/*": [
				"src/router/*"
			],
			"~shared/*": [
				"src/shared/*"
			],
			"~store/*": [
				"src/store/*"
			],
			"~typings/*": [
				"src/typings/*"
			],
			"~/*": [
				"src/*"
			],
			"~hooks/*": [
				"src/hooks/*"
			],
			"~pages/*": [
				"src/pages/*"
			],
			"~utils/*": [
				"src/utils/*"
			],
			"~ForgotPassword/*": [
				"src/pages/ForgotPassword/*"
			],
			"~forgot/*": [
				"src/pages/forgot/*"
			],
			"~recovery/*": [
				"src/pages/recovery/*"
			],
			"~reset/*": [
				"src/pages/reset/*"
			]
		}
	},
	"include": [
		"./src/**/*",
		"./vite.config.ts",
		".eslintrc.cjs",
		"vite-env.d.ts"
	],
	"exclude": [
		"./node_modules",
		"test",
		"./dist",
		"**/*spec.ts"
	]
}